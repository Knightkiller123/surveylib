<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlFirstContainer"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/llfirstContainer"
        android:weightSum="100">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:layout_weight="8"

        android:background="@color/notifycolor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/yourstory"
            android:textSize="@dimen/eightenSp"

            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/eightDp"
            android:layout_marginLeft="@dimen/eightDp"

            android:id="@+id/ivSurveyBack"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_back"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/eightDp"
        android:layout_weight="8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="41"
        android:layout_marginTop="@dimen/eightDp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/selected_circle"/>
        <ProgressBar
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:id="@+id/pbSet"
            android:progress="0"
            android:max="100"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/circle_notreached"/>
        <ProgressBar
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/circle_notreached"/>
        <ProgressBar
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/circle_notreached"/>
        <ProgressBar
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/circle_notreached"/>
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="40"
        android:background="@color/white"
        android:layout_weight="5">

        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/yourstory"
            android:textSize="@dimen/eightSp"
            android:textColor="@color/buttoncolor"
            android:gravity="center"
            android:layout_weight="8"/>

        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/schemes"
            android:id="@+id/tvFirstSurvry"
            android:textSize="@dimen/eightSp"
            android:gravity="center"

            android:layout_weight="8"/>


        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/elegibility"
            android:textSize="@dimen/eightSp"
            android:gravity="center"

            android:layout_weight="8"/>

        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/application"
            android:textSize="@dimen/eightSp"
            android:gravity="center"

            android:layout_weight="8"/>

        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/checkout"
            android:textSize="@dimen/eightSp"
            android:gravity="center"

            android:layout_weight="8"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:layout_marginTop="@dimen/activity_vertical_margin"

        android:id="@+id/rlStaticSurveyForm"
        android:layout_weight="79"
        />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/zeroDp"
       android:visibility="gone"
       android:id="@+id/rlPager"
       android:layout_weight="79">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/vpSurvey"/>
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:id="@+id/rlNoElgbleFirst"
        android:visibility="gone"
        android:layout_weight="79">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/ivSCh"
            android:layout_marginTop="@dimen/thirtyTwoDp"
            app:srcCompat="@drawable/not_eligible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSCh"
            android:layout_centerHorizontal="true"
            android:text="@string/noteligible"
            android:id="@+id/ivNosch"
            android:textSize="@dimen/fourteenSp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivNosch"
            android:textSize="@dimen/fourteenSp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/nextTime"
            android:gravity="center"
            android:padding="@dimen/eightDp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/fortyEightDp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/sixtyDp"
            android:layout_marginRight="@dimen/sixtyDp"
            android:background="@color/buttoncolor"
            android:text="@string/tryagain"
            android:gravity="center"
            android:textSize="@dimen/sixteenSp"
            android:textColor="@color/white"
            android:id="@+id/tvTryAgainEligibleFirst"
            android:layout_marginBottom="@dimen/thirtyDp"/>
    </RelativeLayout>
</LinearLayout>

    </RelativeLayout>
