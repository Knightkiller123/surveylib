<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:id="@+id/rlKnowMoreContainer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyDp"
        android:background="@color/notifycolor"
        android:elevation="@dimen/fourDp"

        android:id="@+id/rlKnow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information"
            android:layout_centerInParent="true"
            android:textSize="@dimen/twentySp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cross"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/ivCrossKnow"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:padding="@dimen/fourDp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/rlKnow"

android:layout_marginBottom="@dimen/sixtyDp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:id="@+id/tvServName"
                        android:layout_marginTop="@dimen/eightDp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteenSp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourDp"
                        android:layout_marginTop="@dimen/twentyDp"

                        android:background="#281d94"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"

                        android:background="@color/buttoncolor"
                        android:padding="@dimen/eightDp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="@dimen/zeroDp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textSize="@dimen/fourteenSp"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/eightDp"
                            android:textColor="@color/white"
                            android:layout_marginRight="@dimen/thirtyTwoDp"
                            android:text="@string/ServiceLevel"/>
                        <TextView
                            android:layout_width="@dimen/zeroDp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:textSize="@dimen/fourteenSp"
                            android:textStyle="bold"
                            android:id="@+id/tvServiceLevel"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/thirtyTwoDp"
                            android:text="2 Days"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourDp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="#281d94"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/eightDp"
                        android:background="#ebeaf1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fourteenSp"
                            android:text="@string/govtFee"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/tvgvf"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 50"
                            android:textStyle="bold"
                            android:textSize="@dimen/fourteenSp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:layout_alignParentRight="true"
                            android:id="@+id/tvgvfp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/proffCharge"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/fourteenSp"
                            android:layout_below="@+id/tvgvf"
                            android:id="@+id/tvgvf1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 50"
                            android:textStyle="bold"
                            android:textSize="@dimen/fourteenSp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tvgvfp"
                            android:id="@+id/tvgvfp1"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oneDp"
                            android:layout_below="@+id/tvgvf1"
                            android:id="@+id/vSep"
                            android:background="@color/grey"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subtotal"
                            android:textSize="@dimen/fourteenSp"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:textStyle="bold"
                            android:layout_below="@+id/vSep"
                            android:id="@+id/tvgvf2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20B9 640"
                            android:textStyle="bold"
                            android:textSize="@dimen/fourteenSp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/activity_vertical_margin"
                            android:layout_below="@+id/vSep"
                            android:id="@+id/tvgvfp2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gstIncluded"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:textColor="#55bf8a"
                            android:textSize="@dimen/tenSp"
                            android:layout_marginBottom="@dimen/eightDp"
                            android:layout_marginTop="@dimen/fourDp"
                            android:layout_below="@+id/tvgvfp2"
                            android:id="@+id/tvgvf3"/>

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_below="@+id/rlAnalysis"
                        android:padding="@dimen/fourDp"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/benefits"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:padding="@dimen/eightDp"
                            android:textSize="@dimen/sixteenSp"
                            android:layout_marginTop="@dimen/eightDp"
                            android:layout_marginLeft="@dimen/eightDp"
                            android:layout_marginBottom="@dimen/fourDp"
                            android:id="@+id/tvBenefitsKnowMore"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvBenefitsKnowMore"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fourteenSp"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/fourDp"
                            android:layout_marginRight="@dimen/activity_vertical_margin"
                            android:id="@+id/tvBenefitsText"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rlAnalysis"
                        android:padding="@dimen/fourDp"
                        android:layout_marginTop="@dimen/eightDp"
                        android:layout_below="@+id/rlDesc"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAnalysis"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteenSp"
                            android:textStyle="bold"
                            android:padding="@dimen/eightDp"

                            android:layout_marginTop="@dimen/eightDp"
                            android:layout_marginLeft="@dimen/eightDp"
                            android:layout_marginBottom="@dimen/fourDp"
                            android:text="@string/analysis"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fourteenSp"
                            android:layout_below="@+id/tvAnalysis"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/fourDp"
                            android:layout_marginRight="@dimen/activity_vertical_margin"
                            android:id="@+id/tvDesc"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_below="@+id/rlAnalysis"
                        android:padding="@dimen/fourDp"
                        android:visibility="gone"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/valueformoney"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:padding="@dimen/eightDp"
                            android:textSize="@dimen/sixteenSp"
                            android:layout_marginTop="@dimen/eightDp"
                            android:layout_marginLeft="@dimen/eightDp"
                            android:layout_marginBottom="@dimen/fourDp"
                            android:id="@+id/tvValue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvValue"
                            android:textSize="@dimen/fourteenSp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/fourDp"
                            android:layout_marginRight="@dimen/activity_vertical_margin"
                            android:id="@+id/tvValueVal"/>
                    </RelativeLayout>

                </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyDp"
        android:text="@string/apply"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/buttoncolor"
        android:id="@+id/tvApplySchemeKnow"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/eightenSp"
        />
</RelativeLayout>
