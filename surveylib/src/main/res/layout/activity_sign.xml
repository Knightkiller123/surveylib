<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@color/back"
    android:clickable="true"
    android:id="@+id/rlSignActivity"


    xmlns:android="http://schemas.android.com/apk/res/android" >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/rlSignIn">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"

           android:layout_height="wrap_content">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/sixtyDp"
                  android:text="@string/signin"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:background="@color/notifycolor"

                  android:textColor="@color/white"
                  android:textSize="@dimen/twentySp"/>

              <ImageView
                  android:layout_width="@dimen/oneHundredDp"
                  android:layout_height="@dimen/oneHundredDp"
                  android:layout_gravity="center"
                  android:layout_marginTop="@dimen/activity_vertical_margin"
                  android:id="@+id/ivLogoAnim"
                  android:transitionName="logoanim"
                  android:src="@drawable/har1"
                  />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/tvWrong"
                  android:layout_marginLeft="@dimen/activity_vertical_margin"
                  android:layout_marginRight="@dimen/activity_vertical_margin"
                  android:layout_marginBottom="@dimen/eightDp"

                  android:text="@string/invalid"
                  android:gravity="center"
                  android:visibility="invisible"
                  android:textSize="@dimen/sixteenSp"
                  android:textColor="@color/red"
                  android:layout_marginTop="@dimen/activity_vertical_margin"/>
              <android.support.design.widget.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/activity_vertical_margin"
                  android:layout_marginLeft="@dimen/thirtyTwoDp"
                  android:layout_marginRight="@dimen/thirtyTwoDp"
                  android:id="@+id/tilNo"
                  android:hint="@string/phn"


                  android:layout_height="wrap_content">
                     <android.support.design.widget.TextInputEditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/etAdhaar"
                         android:inputType="number"
                         android:maxLines="1"
                         android:textSize="@dimen/sixteenSp"
                         android:maxLength="12"

                         />
              </android.support.design.widget.TextInputLayout>



              <android.support.design.widget.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_marginTop="@dimen/eightDp"
                  android:layout_marginLeft="@dimen/thirtyTwoDp"
                  android:layout_marginRight="@dimen/thirtyTwoDp"
                  app:passwordToggleEnabled="true"
                  android:hint="@string/pass"
                  android:id="@+id/tilPass"
                  android:layout_height="wrap_content">
                     <android.support.design.widget.TextInputEditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/etPassword"
                         android:backgroundTint="@color/black"
                         android:inputType="textPassword"
                         android:textSize="@dimen/sixteenSp"
                         android:maxLines="1"
                         />

              </android.support.design.widget.TextInputLayout>


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/eightDp"
                  android:textSize="@dimen/sixteenSp"
                  android:textStyle="bold"
                  android:id="@+id/tvForgot"
                  android:layout_marginRight="@dimen/fortyDp"
                  android:layout_marginTop="@dimen/twelveDp"
                  android:textColor="@color/buttoncolor"
                  android:text="@string/forgot"
                  android:layout_gravity="end"/>


       </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/signCaps"
           android:background="@drawable/box"
           android:paddingTop="@dimen/twelveDp"
           android:layout_marginLeft="@dimen/thirtyDp"
           android:layout_marginRight="@dimen/thirtyDp"
           android:paddingBottom="@dimen/twelveDp"
           android:textColor="@color/white"
           android:gravity="center"
           android:id="@+id/tvSignIn"
           android:textSize="@dimen/twentySp"
           android:layout_above="@+id/rlBot1"
           android:layout_centerVertical="true"
           />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom"
           android:gravity="center"
           android:layout_alignParentBottom="true"
           android:id="@+id/rlBot1"

           android:layout_marginTop="@dimen/thirtyTwoDp"
           android:layout_marginBottom="@dimen/thirtyDp"
           android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/fourteenSp"
                  android:id="@+id/tvAnchor1"

                  android:text="@string/noaccnt"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="@dimen/fourDp"
                  android:layout_toRightOf="@+id/tvAnchor1"
                  android:id="@+id/tvSignUp"
                  android:textStyle="bold"
                  android:textSize="@dimen/fourteenSp"
                  android:textColor="@color/buttoncolor"
                  android:layout_marginBottom="@dimen/activity_vertical_margin"

                  android:text="@string/signup"/>
       </RelativeLayout>
</RelativeLayout>

<include layout="@layout/layout_sign_up"/>




</RelativeLayout>