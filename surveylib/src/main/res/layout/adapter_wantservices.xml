<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/rlWantAdap"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fourteenSp"
        android:id="@+id/tvWantService"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/fourDp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/fourDp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvServCat"
        android:layout_marginBottom="@dimen/eightDp"
        android:textSize="@dimen/twelveSp"
        android:layout_marginLeft="@dimen/activity_vertical_margin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneDp"
        android:layout_marginRight="@dimen/eightDp"
        android:layout_marginLeft="@dimen/eightDp"
        android:layout_marginBottom="@dimen/fourDp"
        android:background="@color/grey"/>
</LinearLayout>