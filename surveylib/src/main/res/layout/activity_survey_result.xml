<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/llsurveyResult"
    android:weightSum="100">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:layout_weight="8"
        android:background="@color/notifycolor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/schemes"
            android:textSize="@dimen/twentySp"

            android:id="@+id/tvSecondHeader"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/eightDp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/eightDp"
            android:id="@+id/ivSchemesBack"
            app:srcCompat="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/eightDp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/eightDp"
            android:id="@+id/tvFilterSchemes"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/eightDp"
            android:text="@string/filter"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteenSp"
            android:drawablePadding="@dimen/eightDp"
            android:drawableEnd="@drawable/filter_white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/eightDp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/eightDp"
            android:visibility="gone"
            android:id="@+id/ivFilterSchemes"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/eightDp"
            app:srcCompat="@drawable/filter_white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:layout_marginTop="@dimen/eightDp"
        android:background="@color/white"
        android:layout_weight="8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:weightSum="41"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
       android:layout_marginTop="@dimen/eightDp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/circle_done"/>
        <ProgressBar
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:layout_weight="4"

            android:progress="100"
            android:max="100"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/selected_circle"/>
        <ProgressBar
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:progress="100"
            android:max="0"
            android:id="@+id/pbSet1"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/circle_notreached"/>
        <ProgressBar
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/circle_notreached"/>
        <ProgressBar
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <ImageView
            android:layout_width="@dimen/zeroDp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/circle_notreached"/>
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="40"
        android:background="@color/white"
        android:layout_weight="5">

        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/yourstory"
            android:textSize="@dimen/eightSp"
            android:textColor="@color/buttoncolor"
            android:gravity="center"
            android:layout_weight="8"/>

        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/schemes"
            android:textColor="@color/buttoncolor"
            android:textSize="@dimen/eightSp"
            android:id="@+id/tvSchemeSecond"
            android:gravity="center"
            android:layout_weight="8"/>


        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/elegibility"
            android:textSize="@dimen/eightSp"
            android:gravity="center"

            android:layout_weight="8"/>

        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/application"
            android:textSize="@dimen/eightSp"
            android:gravity="center"

            android:layout_weight="8"/>

        <TextView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="wrap_content"
            android:text="@string/checkout"
            android:textSize="@dimen/eightSp"
            android:gravity="center"

            android:layout_weight="8"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:layout_weight="79"
        android:layout_marginTop="@dimen/activity_vertical_margin"

        android:id="@+id/rvStory"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroDp"
        android:id="@+id/rlNoSchemes"
        android:visibility="gone"
        android:layout_weight="79">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/ivSCh"
            android:layout_marginTop="@dimen/thirtyTwoDp"
            app:srcCompat="@drawable/no_schemes"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSCh"
            android:layout_centerHorizontal="true"
            android:text="@string/noscheme"
            android:id="@+id/ivNosch"
            android:textSize="@dimen/fourteenSp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivNosch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textSize="@dimen/fourteenSp"
            android:padding="@dimen/eightDp"
            android:text="@string/nextTime"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/fortyEightDp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/sixtyDp"
            android:layout_marginRight="@dimen/sixtyDp"
            android:background="@color/buttoncolor"
            android:text="@string/tryagain"
            android:gravity="center"
            android:textSize="@dimen/sixteenSp"
            android:textColor="@color/white"
            android:id="@+id/tvTryAgain"
            android:layout_marginBottom="@dimen/thirtyDp"/>
    </RelativeLayout>

</LinearLayout>
