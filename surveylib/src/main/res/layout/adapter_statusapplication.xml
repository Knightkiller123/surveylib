<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:id="@+id/tvNoApplication"
            android:text="130"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteenSp"
            android:layout_marginTop="@dimen/twentyDp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNoApplication"
            android:text="Total application"
            android:id="@+id/tvNameApplication"
            android:textSize="@dimen/fourteenSp"
            android:layout_marginBottom="@dimen/fourDp"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/oneDp"
            android:background="@color/grey"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</RelativeLayout>