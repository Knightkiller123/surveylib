<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyDp"
        android:layout_weight="8"

        android:background="@color/toolbarcolor">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/benefits"
            android:textSize="@dimen/twentySp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/eightDp"
            android:id="@+id/ivBenefitsBack"
            android:layout_marginStart="@dimen/eightDp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_back"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyDp"
        android:layout_marginTop="@dimen/sixtyDp"
        android:background="@color/toolbarcolor"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/eightDp"
        android:layout_marginEnd="@dimen/eightDp"
        android:layout_marginTop="@dimen/sixtyDp"
        android:id="@+id/cvYay"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/thirtyTwoDp"
                android:layout_height="@dimen/thirtyDp"
                android:layout_marginTop="@dimen/twelveDp"
                android:layout_centerHorizontal="true"
                android:id="@+id/ivSCh1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/success"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/congatulationeligible"
                android:id="@+id/ivNosch1"
                android:textSize="@dimen/fourteenSp"
                android:layout_marginTop="@dimen/eightDp"
                android:textColor="@color/green"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:padding="@dimen/fourDp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textSize="@dimen/eightenSp"
                android:layout_marginTop="@dimen/eightDp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:id="@+id/tvSchemeDisplay"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicative"
                android:layout_gravity="center"
                android:padding="@dimen/sixDp"
                android:textSize="@dimen/fourteenSp"
                android:id="@+id/tvIndicative"
                android:drawablePadding="@dimen/eightDp"
                android:gravity="center"
                android:drawableStart="@drawable/negateicon"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cvYay"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryColor"
                android:background="@drawable/benefitline"
                android:id="@+id/tvDbt"
                android:textSize="@dimen/sixteenSp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:text="@string/cashbenefits"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvBenefits"
                android:layout_marginBottom="@dimen/sixtyDp"
                android:layout_marginStart="@dimen/fourDp"
                android:paddingBottom="@dimen/twoDp"
                android:layout_margin="@dimen/eightDp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryColor"
                android:background="@drawable/benefitline"
                android:layout_marginTop="@dimen/eightDp"
                android:id="@+id/tvMonetory"
                android:textSize="@dimen/sixteenSp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:text="@string/cash"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvBenefitsMonetory"
                android:layout_marginBottom="@dimen/sixtyDp"
                android:paddingBottom="@dimen/twoDp"
                android:layout_marginStart="@dimen/fourDp"
                android:layout_margin="@dimen/eightDp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryColor"
                android:background="@drawable/benefitline"
                android:layout_marginTop="@dimen/eightDp"
                android:id="@+id/tvNonMonetory"
                android:textSize="@dimen/sixteenSp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:text="@string/noncash"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvBenefitsNon"
                android:layout_marginBottom="@dimen/sixtyDp"
                android:paddingBottom="@dimen/twoDp"
                android:layout_marginStart="@dimen/fourDp"
                android:layout_margin="@dimen/eightDp"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>