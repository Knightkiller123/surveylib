<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_selectMethod12"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.7"></RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="vertical"
        android:id="@+id/rlAuthMethod"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/fortyDp"
        android:layout_marginBottom="@dimen/sixtyDp"

        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verificationMode"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/thirtyTwoDp"

                    android:textColor="@color/black"
                    android:textSize="@dimen/twentySp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/black_cross"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:padding="@dimen/fourDp"
                    android:id="@+id/ivVerifyBack"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/selectoptn"
                android:gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twentyFourDp"

                    android:layout_marginTop="@dimen/twentyFourDp"

                    android:text="@string/getonPhn"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oneDp"
                    android:background="@color/grey"
                    android:layout_marginLeft="@dimen/twentyFourDp"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fourDp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbOtp"
                        android:checked="true"
                        android:layout_marginLeft="@dimen/twentyFourDp"
                        android:layout_centerVertical="true"
                        android:text="@string/otp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/help_grey01_01"
                        android:id="@+id/ivOtpInfo"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/fourDp"
                        android:layout_marginRight="@dimen/eightDp"/>
                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/fourteenSp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twentyFourDp"
                android:layout_marginTop="@dimen/fortyDp"
                android:text="@string/biometric"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/oneDp"
                android:background="@color/grey"
                android:layout_marginLeft="@dimen/twentyFourDp"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fourDp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fourDp"
                android:id="@+id/rgBiometric"
                android:layout_marginLeft="@dimen/twentyFourDp"

                android:layout_marginTop="@dimen/eightDp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbFinger"
                        android:textSize="@dimen/fourteenSp"

                        android:layout_marginTop="@dimen/eightDp"
                        android:text="@string/fingerprint"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/help_grey01_01"
                        android:id="@+id/ivFingerInfo"
                        android:padding="@dimen/fourDp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/eightDp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbQrcode"
                        android:textSize="@dimen/fourteenSp"

                        android:layout_marginTop="@dimen/eightDp"
                        android:text="@string/qrcode"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/help_grey01_01"
                        android:id="@+id/ivqrinfo"
                        android:padding="@dimen/fourDp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/eightDp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rbIris"
                        android:layout_marginTop="@dimen/eightDp"
                        android:enabled="false"
                        android:textSize="@dimen/fourteenSp"
                        android:textColor="@color/darkgrey"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/iris"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/help_grey01_01"
                        android:id="@+id/ivIrisInfo"
                        android:padding="@dimen/fourDp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/eightDp"/>
                </RelativeLayout>


            </RadioGroup>


        </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:id="@+id/rlAuthMethodNextPopUp"
            android:layout_marginLeft="@dimen/fortyDp"
            android:layout_marginRight="@dimen/fortyDp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:background="@drawable/box"
                android:paddingTop="@dimen/twelveDp"

                android:paddingBottom="@dimen/twelveDp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/twentySp"

                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>