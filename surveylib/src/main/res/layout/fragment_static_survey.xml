<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlStaticMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/rlHavingAadhaar"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirtyDp"
        android:text="@string/havingaadhar"
        android:textSize="@dimen/fourteenSp"
        android:layout_marginLeft="@dimen/twentyFourDp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/tvAadhaarQues"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNo"
        android:paddingLeft="@dimen/twentyDp"
        android:paddingRight="@dimen/twentyDp"
        android:paddingTop="@dimen/eightDp"
        android:paddingBottom="@dimen/eightDp"
        android:background="@drawable/white_curved"
        android:layout_below="@+id/tvAadhaarQues"
        android:layout_marginLeft="@dimen/twentyFourDp"
        android:textSize="@dimen/sixteenSp"
        android:layout_marginTop="@dimen/twentyFourDp"
        android:text="@string/no"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAadhaarQues"
            android:id="@+id/tvYes"
            android:paddingLeft="@dimen/twentyFourDp"
            android:paddingRight="@dimen/twentyDp"
            android:paddingTop="@dimen/eightDp"
            android:paddingBottom="@dimen/eightDp"
            android:background="@drawable/white_curved"
            android:layout_toRightOf="@+id/tvNo"
            android:textSize="@dimen/sixteenSp"
            android:layout_marginLeft="@dimen/twentyFourDp"
            android:layout_marginTop="@dimen/twentyFourDp"
            android:text="@string/yes"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/eightDp"
            android:id="@+id/llFamily"
            android:layout_below="@+id/tvNo"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/familymemberques"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/eightDp"
                android:alpha="0.6"
                android:textSize="@dimen/tenSp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyDp"
                    android:spinnerMode="dialog"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"

                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fourDp"
                    android:background="@drawable/spinnerlookalike"

                    android:id="@+id/spSpinFamily"></Spinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/spinnerdownicon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/twentyEightDp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llFamily"
            android:id="@+id/llFamilyNo"
            android:visibility="gone"
            android:layout_marginTop="@dimen/eightDp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phn"
                android:alpha="0.6"
                android:textSize="@dimen/tenSp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/eightDp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_height="@dimen/fortyDp"
                android:layout_marginTop="@dimen/eightDp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittextunfocused"

                    android:textSize="@dimen/fourteenSp"
                    android:id="@+id/etPhnDet"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/eightDp"

                    android:singleLine="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/round_cross_01"
                    android:padding="@dimen/fourDp"
                    android:visibility="gone"
                    android:id="@+id/ivPhnErase"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixtyDp"
            android:layout_alignParentBottom="true"
            android:text="@string/next"
            android:id="@+id/tvNextHavingAadhar"
            android:gravity="center"
            android:background="@color/grey"
            android:textSize="@dimen/twentySp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:background="@color/white"
android:visibility="gone"
        android:id="@+id/rlApplyingFor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirtyDp"
            android:text="@string/hometitle"
            android:layout_marginLeft="@dimen/twentyFourDp"
            android:textStyle="bold"
            android:textSize="@dimen/sixteenSp"
            android:textColor="@color/black"
            android:id="@+id/tvAPllyQues"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMyself"
            android:paddingLeft="@dimen/twentyDp"
            android:paddingRight="@dimen/twentyDp"
            android:paddingTop="@dimen/eightDp"
            android:paddingBottom="@dimen/eightDp"
            android:background="@drawable/white_curved"
            android:layout_below="@+id/tvAPllyQues"
            android:layout_marginLeft="@dimen/twentyFourDp"
            android:textSize="@dimen/sixteenSp"
            android:layout_marginTop="@dimen/twentyFourDp"
            android:text="@string/myself"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFamilyMember"

            android:id="@+id/tvSomeoneElse"
            android:paddingLeft="@dimen/twentyDp"
            android:paddingRight="@dimen/twentyDp"
            android:paddingTop="@dimen/eightDp"
            android:paddingBottom="@dimen/eightDp"
            android:background="@drawable/white_curved"

            android:textSize="@dimen/sixteenSp"
            android:layout_marginLeft="@dimen/twentyFourDp"
            android:layout_marginTop="@dimen/twentyFourDp"
            android:text="@string/someoneelse"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMyself"
            android:id="@+id/tvFamilyMember"
            android:paddingLeft="@dimen/twentyDp"

            android:paddingRight="@dimen/twentyDp"
            android:paddingTop="@dimen/eightDp"
            android:paddingBottom="@dimen/eightDp"
            android:background="@drawable/white_curved"

            android:textSize="@dimen/sixteenSp"
            android:layout_marginLeft="@dimen/twentyFourDp"
            android:layout_marginTop="@dimen/twentyFourDp"
            android:text="@string/familymember"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixtyDp"
            android:layout_alignParentBottom="true"
            android:text="@string/next"
            android:clickable="false"
            android:id="@+id/tvNextApplyingFor"
            android:gravity="center"
            android:background="@color/grey"
            android:textSize="@dimen/twentySp"

            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/rlEnterAadhar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirtyDp"
            android:text="@string/enterAdhr"
            android:layout_marginLeft="@dimen/twentyFourDp"
            android:textStyle="bold"
            android:textSize="@dimen/sixteenSp"
            android:textColor="@color/black"
            android:id="@+id/tventerAdhar"

            />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tventerAdhar"
    android:hint="@string/aadhaarno"
    android:id="@+id/etAadhaarMandatory"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:inputType="number"
    android:maxLength="12"

    android:textSize="@dimen/fourteenSp"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/thirtyTwoDp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixtyDp"
            android:layout_alignParentBottom="true"
            android:text="@string/next"
            android:id="@+id/tvNextAadharStatic"
            android:gravity="center"
            android:background="@color/buttoncolor"
            android:textSize="@dimen/twentySp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.6"
android:visibility="gone"
        android:id="@+id/rlBackground">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:visibility="gone"
        android:id="@+id/rlAadhaarMethod">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/thirtyTwoDp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixtyDp"
                    android:text="@string/verificationMode"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/thirtyTwoDp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twentySp"/>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/black_cross"
    android:layout_alignParentRight="true"
    android:layout_marginTop="@dimen/eightDp"
    android:layout_marginRight="@dimen/eightDp"
    android:padding="@dimen/eightDp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/selectoptn"
                android:gravity="center"
                android:textSize="@dimen/fourteenSp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twentyFourDp"

                    android:textSize="@dimen/fourteenSp"
                    android:layout_marginTop="@dimen/twentyFourDp"

                    android:text="@string/getonPhn"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oneDp"
                    android:background="@color/grey"
                    android:layout_marginLeft="@dimen/twentyFourDp"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/fourDp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbOtp"
                        android:textSize="@dimen/fourteenSp"

                        android:layout_marginLeft="@dimen/twentyFourDp"
                        android:layout_centerVertical="true"
                        android:text="@string/otp"/>

                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fourteenSp"
                android:layout_marginLeft="@dimen/twentyFourDp"
                android:layout_marginTop="@dimen/fortyDp"
                android:text="@string/biometric"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/oneDp"
                android:background="@color/grey"
                android:layout_marginLeft="@dimen/twentyFourDp"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fourDp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fourDp"
                android:id="@+id/rgBiometric"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/twentyFourDp"

                android:layout_marginTop="@dimen/eightDp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rbIris"
                        android:layout_marginTop="@dimen/eightDp"
                        android:textSize="@dimen/fourteenSp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/iris"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/fourteenSp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbFinger"
                        android:layout_marginTop="@dimen/eightDp"
                        android:text="@string/fingerprint"/>

                </RelativeLayout>
            </RadioGroup>

<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/fiftyTwoDp"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/thirtyTwoDp"
    android:layout_marginLeft="@dimen/twentyFourDp"
    android:background="@color/buttoncolor"
    android:text="@string/next"
    android:gravity="center"
    android:textSize="@dimen/twentySp"
    android:textColor="@color/white"
    android:id="@+id/tvNextAdharMethod"
    android:layout_marginRight="@dimen/twentyFourDp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/sixtyDp"
        android:layout_marginBottom="@dimen/sixtyDp"
android:visibility="gone"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:id="@+id/rlOtpStatic">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:id="@+id/rlVer">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/verification"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/sixtyDp"
                android:textColor="@color/black"
                android:textSize="@dimen/twentySp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/eightDp"
                android:padding="@dimen/eightDp"
                app:srcCompat="@drawable/black_cross"
                android:layout_centerVertical="true"
                android:id="@+id/ivVerifyOtpBack"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/verifyTop"
            android:layout_below="@+id/rlVer"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvWrong"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/eightDp"
                android:text="@string/otpsent"
                android:gravity="center"
                android:textSize="@dimen/sixteenSp"
                android:layout_marginTop="@dimen/thirtyTwoDp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/fortyEightDp"
                android:weightSum="6">
                <EditText
                    android:layout_width="@dimen/zeroDp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/etOtp1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="@dimen/fourteenSp"
                    android:hint="OTP"
                    android:maxLength="1"
                    android:inputType="number"

                    />
                <EditText
                    android:layout_width="@dimen/zeroDp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:maxLength="1"
                    android:textSize="@dimen/fourteenSp"
                    android:gravity="center"
                    android:id="@+id/etOtp2"
                    android:inputType="number"
                    />
                <EditText
                    android:layout_width="@dimen/zeroDp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:maxLength="1"
                    android:textSize="@dimen/fourteenSp"
                    android:gravity="center"
                    android:id="@+id/etOtp3"
                    android:inputType="number"
                    />
                <EditText
                    android:layout_width="@dimen/zeroDp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:maxLength="1"
                    android:textSize="@dimen/fourteenSp"
                    android:gravity="center"
                    android:id="@+id/etOtp4"
                    android:inputType="number"
                    />
                <EditText
                    android:layout_width="@dimen/zeroDp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:maxLength="1"
                    android:textSize="@dimen/fourteenSp"
                    android:gravity="center"
                    android:id="@+id/etOtp5"
                    android:inputType="number"
                    />
                <EditText
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:maxLength="1"
                    android:textSize="@dimen/fourteenSp"
                android:gravity="center"
                android:id="@+id/etOtp6"
                android:inputType="number"
                />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/eightDp"
                android:textSize="@dimen/twentySp"
                android:textStyle="bold"
                android:id="@+id/tvResendOtp"
                android:gravity="center"
                android:layout_marginTop="@dimen/thirtyTwoDp"
                android:textColor="@color/black"
                android:text="@string/resend"
                android:visibility="gone"
                android:layout_gravity="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/eightDp"
                android:textSize="@dimen/twentySp"
                android:textStyle="bold"
                android:id="@+id/tvTimer"
                android:gravity="center"

                android:layout_marginTop="@dimen/thirtyTwoDp"
                android:textColor="@color/black"
                android:text="1:00"
                android:layout_gravity="end"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/fiftyTwoDp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/thirtyTwoDp"
            android:layout_marginLeft="@dimen/twentyFourDp"
            android:background="@color/buttoncolor"
            android:text="@string/next"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="@dimen/twentySp"
            android:textColor="@color/white"
            android:id="@+id/tvNextOtpStatic"
            android:layout_marginRight="@dimen/twentyFourDp"/>
    </RelativeLayout>


</RelativeLayout>
