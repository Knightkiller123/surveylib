<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:textSize="@dimen/fourteenSp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/black"
        android:alpha="0.6"

        android:id="@+id/tvSpinnerTitle"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/fortyDp"
        android:spinnerMode="dialog"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eightDp"
        android:background="@drawable/spinnerlookalike"
        android:id="@+id/spSpin"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/downarrow"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/twentyDp"/>
    </RelativeLayout>
</LinearLayout>