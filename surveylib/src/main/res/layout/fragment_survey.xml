<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlSurveyKeyClose"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/buttoncolor"
        android:alpha="0.6"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="@dimen/sixteenSp"
        android:textColor="@color/white"
        android:text="dvsvvfsvs"
        android:id="@+id/tvBenName"/>
    <android.support.v7.widget.CardView


        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_height="match_parent"
        android:id="@+id/cvFirstSurvey"
        android:layout_below="@+id/tvBenName"
        android:layout_above="@+id/tvSurveyNext"
        >
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/rvEntitlement"
        android:layout_marginLeft="@dimen/eightDp"
        android:layout_marginRight="@dimen/eightDp"
        android:layout_marginTop="@dimen/activity_vertical_margin"

        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyDp"
        android:background="@color/buttoncolor"
        android:layout_alignParentBottom="true"
        android:text="@string/next"
        android:gravity="center"
        android:textSize="@dimen/twentySp"

        android:textColor="@color/white"
        android:clickable="true"
        android:id="@+id/tvSurveyNext"
        />
</RelativeLayout>