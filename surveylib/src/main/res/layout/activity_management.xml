<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/llManagement"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        android:id="@+id/rlManagementContainer"></RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixtyDp"
    android:background="@color/notifycolor">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/management"
        android:textColor="@color/white"
        android:textSize="@dimen/eightenSp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/eightDp"
        android:id="@+id/ivManagementBack"
        android:padding="@dimen/eightDp"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyDp"
        android:background="@color/white"
        android:id="@+id/rlSearchApplication"
        android:layout_marginTop="64dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/ivCheckStatus1"
            android:padding="@dimen/twelveDp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/searchapplication"
            android:textSize="@dimen/fourteenSp"
            android:textColor="@color/black"

            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/twelveDp"
            android:layout_toRightOf="@+id/ivCheckStatus1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            app:srcCompat="@drawable/nextarrow"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyDp"
        android:background="@color/white"
        android:layout_below="@+id/rlSearchApplication"
        android:id="@+id/rlFilterApplication"
        android:layout_marginTop="@dimen/twoDp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/ivCheckStatus2"
            android:padding="@dimen/twelveDp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filterapplication"
            android:textSize="@dimen/fourteenSp"
            android:textColor="@color/black"

            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/twelveDp"
            android:layout_toRightOf="@+id/ivCheckStatus2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            app:srcCompat="@drawable/nextarrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyDp"
        android:background="@color/white"
        android:id="@+id/rlApplicationStatus"
        android:layout_below="@+id/rlFilterApplication"
        android:layout_marginTop="@dimen/twoDp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/ivCheckStatus3"
            android:padding="@dimen/twelveDp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appstatus"
            android:textSize="@dimen/fourteenSp"
            android:textColor="@color/black"

            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/twelveDp"
            android:layout_toRightOf="@+id/ivCheckStatus3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            app:srcCompat="@drawable/nextarrow"/>
    </RelativeLayout>
</RelativeLayout>