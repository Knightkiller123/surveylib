<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginTop="@dimen/eightDp"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/eightDp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <LinearLayout
            android:padding="@dimen/twelveDp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tvTag"
            android:id="@+id/llDetail"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvName"
                android:textStyle="bold"
                android:text="Rahul RAj"
                android:textSize="@dimen/sixteenSp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/tvPhoneNumber"
                android:textSize="@dimen/fourteenSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/tvTag"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteenSp"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
android:text="vdsvs"

            android:background="@drawable/green_curved"
            android:paddingStart="@dimen/eightDp"
            android:paddingEnd="@dimen/eightDp"
            android:paddingTop="@dimen/fourDp"
            android:paddingBottom="@dimen/fourDp"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/eightDp"
            android:layout_height="wrap_content"
            />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oneDp"
            android:background="@color/grey"
            android:layout_below="@+id/llDetail"/>
        <LinearLayout
            android:layout_below="@+id/view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvRemove"
                android:layout_weight="1"
                android:padding="@dimen/sixteenDp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/remove"
                android:gravity="center"
                android:textSize="@dimen/twelveSp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginBottom="@dimen/fourDp"
                android:layout_marginTop="@dimen/fourDp"
                android:layout_width="@dimen/oneDp"
                android:layout_height="@dimen/fortyDp"
                android:background="@color/grey"
                />

            <TextView
                android:id="@+id/tvKnowTheirSchemes"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/sixteenDp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/knowtheirschemes"
                android:textSize="@dimen/twelveSp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>